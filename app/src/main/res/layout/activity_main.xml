<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Hola"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">


        <Button
            android:id="@+id/btnFadein"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Fade in" />

        <Button
            android:id="@+id/btnFadeout"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/btnFadein"
            android:text="Fade out" />

        <Button
            android:id="@+id/btnFadeInOut"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/btnFadeout"
            android:text="Fade in Out" />

        <Button
            android:id="@+id/btbZoomIn"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFadein"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="Zoom In" />

        <Button
            android:id="@+id/btnZoomOut"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFadeInOut"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@+id/btbZoomIn"
            android:text="Zoom out" />

        <Button
            android:id="@+id/btnLeftRight"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btbZoomIn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Left Right" />

        <Button
            android:id="@+id/btnRightLeft"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnZoomOut"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="20dp"
            android:text="Right Left" />

        <Button
            android:id="@+id/btnTopBottom"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFadeout"
            android:layout_marginStart="25dp"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@+id/btnRightLeft"
            android:layout_toEndOf="@+id/btnLeftRight"
            android:text="Top Bottom" />

        <Button
            android:id="@+id/btnBounce"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_below="@+id/btnLeftRight"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="171dp"
            android:text="Bounce" />

        <Button
            android:id="@+id/btnFlash"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_below="@+id/btnRightLeft"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="155dp"
            android:text="Flash" />

        <Button
            android:id="@+id/btnRotate"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="166dp"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="25dp"
            android:text="Rotate" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="31dp"
            android:layout_toStartOf="@+id/txtSeekBar"
            android:max="5000" />

        <TextView
            android:id="@+id/txtSeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:text="TextView" />

    </RelativeLayout>


</LinearLayout>